    <script>
      // Simple announcements + gallery management using browser localStorage.
      (function(){
        // --- Announcements ---
        const annKey = 'mahallu_announcements_v1';
        const announcementsList = document.getElementById('announcements-list');

        function renderAnnouncements(){
          const data = JSON.parse(localStorage.getItem(annKey) || '[]');
          if(data.length===0){
            announcementsList.innerHTML = '<p style="color:#666;margin:0">No announcements yet.</p>';
            return;
          }
          announcementsList.innerHTML = data.map((a,idx)=>`<div style="padding:8px;border-bottom:1px solid #eee"><strong>${a.title}</strong><div style="font-size:13px;color:#444;margin-top:4px">${a.body}</div><div style="margin-top:6px;font-size:12px;color:#888">Posted: ${new Date(a.posted).toLocaleString()}</div><div style="margin-top:6px"><button data-idx="${idx}" class="del-ann" style="padding:6px 8px;border-radius:6px">Delete</button></div></div>`).join('');
          document.querySelectorAll('.del-ann').forEach(btn=>btn.addEventListener('click',e=>{
            const idx = parseInt(e.target.getAttribute('data-idx'));
            const arr = JSON.parse(localStorage.getItem(annKey) || '[]'); arr.splice(idx,1); localStorage.setItem(annKey,JSON.stringify(arr)); renderAnnouncements();
          }));
        }

        renderAnnouncements();

        // Quick admin UI (toggleable)
        const adminToggle = document.createElement('button');
        adminToggle.textContent = 'Manage Announcements & Photos';
        adminToggle.style = 'margin-top:10px;padding:8px 12px;border-radius:8px;background:var(--green);color:#fff;border:none;cursor:pointer';
        announcementsList.parentNode.insertBefore(adminToggle, announcementsList.nextSibling);

        const adminPanel = document.createElement('div');
        adminPanel.style = 'background:#fff;border-radius:8px;padding:10px;margin-top:10px;display:none;box-shadow:0 6px 18px rgba(0,0,0,0.05)';
        adminPanel.innerHTML = `
          <div style="display:flex;gap:8px;flex-wrap:wrap">
            <input id="ann-title" placeholder="Announcement title" style="flex:1;padding:8px;border-radius:6px;border:1px solid #ddd">
            <button id="add-ann" style="padding:8px 12px;border-radius:6px">Add Announcement</button>
          </div>
          <textarea id="ann-body" placeholder="Announcement body" style="width:100%;margin-top:8px;padding:8px;border-radius:6px;border:1px solid #ddd;min-height:80px"></textarea>
        `;
        adminToggle.parentNode.insertBefore(adminPanel, adminToggle.nextSibling);

        adminToggle.addEventListener('click',()=>{ adminPanel.style.display = adminPanel.style.display === 'none' ? 'block' : 'none'; });

        document.addEventListener('click',function(e){
          if(e.target && e.target.id === 'add-ann'){
            const t = document.getElementById('ann-title').value.trim();
            const b = document.getElementById('ann-body').value.trim();
            if(!t && !b){ alert('Please add a title or body.'); return }
            const arr = JSON.parse(localStorage.getItem(annKey) || '[]');
            arr.unshift({title: t||'(No title)', body: b||'', posted:new Date().toISOString()});
            localStorage.setItem(annKey, JSON.stringify(arr));
            document.getElementById('ann-title').value=''; document.getElementById('ann-body').value=''; renderAnnouncements();
          }
        });

        // --- Gallery ---
        const galleryEl = document.getElementById('gallery');
        const inputEl = document.getElementById('event-photo-input');
        const galleryKey = 'mahallu_event_gallery_v1';

        function renderGallery(){
          const imgs = JSON.parse(localStorage.getItem(galleryKey) || '[]');
          galleryEl.innerHTML = imgs.map((src,i)=>`<div style="position:relative;border-radius:8px;overflow:hidden"><img src="${src}" data-i="${i}" style="width:100%;height:160px;object-fit:cover;display:block;cursor:pointer"></div>`).join('');
          // click to open lightbox
          galleryEl.querySelectorAll('img').forEach(img=>img.addEventListener('click',e=>{ document.getElementById('lightbox-img').src = e.target.src; document.getElementById('lightbox').style.display='flex'; }));
        }

        renderGallery();

        inputEl.addEventListener('change', async function(e){
          const files = Array.from(e.target.files || []);
          if(files.length===0) return;
          const arr = JSON.parse(localStorage.getItem(galleryKey) || '[]');
          for(const f of files){
            if(!f.type.startsWith('image/')) continue;
            const data = await readFileAsDataURL(f);
            arr.unshift(data);
          }
          localStorage.setItem(galleryKey, JSON.stringify(arr));
          inputEl.value=''; renderGallery();
        });

        document.getElementById('clear-gallery').addEventListener('click',()=>{ if(confirm('Clear gallery from this browser?')){ localStorage.removeItem(galleryKey); renderGallery(); } });

        document.getElementById('lightbox-close').addEventListener('click',()=>{ document.getElementById('lightbox').style.display='none'; document.getElementById('lightbox-img').src=''; });
        document.getElementById('lightbox').addEventListener('click',(e)=>{ if(e.target.id==='lightbox') { document.getElementById('lightbox').style.display='none'; document.getElementById('lightbox-img').src=''; }});

        function readFileAsDataURL(file){
          return new Promise((res,rej)=>{
            const r=new FileReader(); r.onload = ()=>res(r.result); r.onerror=rej; r.readAsDataURL(file);
          });
        }

      })();
    </script>

